pipeline {
    agent any

    stages{
        stage('Clenup') {
            steps {
                deleteDir()
            }
        }
        stage('Pull') {
            steps{
                git branch: 'feature/develop/task2',
                    url: 'https://github.com/dimoybiyca/csdt2024ki49kryvyidmytro13.git'
            }
        }
        stage('Build') {
            steps{
                dir('src/iwnil_client') {
                    sh "docker build dimoybiyca/iwnil-client:0.${env.BUILD_NUMBER} ."
                }
            }
        }
    }
}